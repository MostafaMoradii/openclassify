{% extends "visiosoft.module.classifieds::list/list" %}
{% block listContent %}
    <div class="table-responsive table-classified">

        <table class="table classified-list-table table-striped">
            <thead>
                <tr>
                    <th scope="col" colspan="2"
                        class="text-center align-middle">{{ trans('visiosoft.module.classifieds::field.classifieds_list_table_thead.name') }}</th>
                    <th scope="col"
                        class="text-center align-middle">{{ trans('visiosoft.module.classifieds::field.classifieds_list_table_thead.price') }}</th>
                    {% if not setting_value('visiosoft.module.classifieds::classifieds_date_hidden') %}
                        <th scope="col"
                            class="text-center align-middle">{{ trans('visiosoft.module.classifieds::field.classifieds_list_table_thead.publish_at') }}</th>
                    {% endif %}
                    {% if setting_value('visiosoft.module.location::list_page_location') %}
                        <th scope="col"
                            class="text-center align-middle">{{ trans('visiosoft.module.classifieds::field.classifieds_list_table_thead.location_city') }}
                            / {{ trans('visiosoft.module.classifieds::field.classifieds_list_table_thead.location_country') }}</th>
                    {% endif %}
                    {{ addBlock('classifieds-list/table-column',{'seenList':seenList})|raw }}
                </tr>
            </thead>
            <tbody>
            {{ addBlock('classified-list/partials/table',{'featured_classifieds':featured_classifieds,'seenList':seenList})|raw }}
            {% for classified in classifieds %}
                <tr class="text-center clickable-row{% if classified.doping != null %} doping_type4 {% endif %}" data-href='{{ classified.detail_url }}'>
                    <td class="justify-content-center align-middle text-center td-image">
                        <a href="">
                            <img class="img-thumbnail" src="{{ classified.cover_photo }}" alt="{{ classified.name }}">
                        </a>
                    </td>
                    <td class="text-left justify-content-center align-middle td-subject">
                        <div class="table-row-name">
                            <a href="{{ classified.detail_url }}" class="text-dark">
                                {{ classified.name }}
                            </a>
                        </div>
                    </td>
                    <td class="justify-content-center align-middle td-price">
                        <b>{{ currency_format(classified.price,classified.currency) }}</b>
                    </td>
                    {% if not setting_value('visiosoft.module.classifieds::classifieds_date_hidden') %}
                        <td class="justify-content-center align-middle td-date">
                            <small>{{ classified.created_at|date("d/m/Y") }}</small>
                        </td>
                    {% endif %}
                    {% if setting_value('visiosoft.module.location::list_page_location') %}
                        <td class="justify-content-center align-middle td-country">
                            <small>{{ classified.city_name }} / {{ classified.country_name }}</small>
                        </td>
                    {% endif %}
                    {{ addBlock('classifieds-list/table-row',{'seenList':seenList,'classified':classified})|raw }}
                </tr>
            {% endfor %}
            <!--Table Rows-->
            </tbody>
        </table>
    </div>

{% endblock %}
{% block customjs %}
    {{ asset_add("scripts.js", "visiosoft.module.classifieds::js/list-table.js") }}
    {% include "theme::scroll-modal" %}
{% endblock %}